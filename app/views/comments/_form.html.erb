<%= simple_form_for([@probation, @daily, @daily.comment.build], :validate => true, :html => {:class => 'form-vertical validate' }) do |f| %>
    <%= f.error_notification %>
    <table style="width: 50%" >
      <tr>
        <td width="95%">
          <div class="form-inputs">
            <%= f.input :comment, :label => false, :input_html => {:style => "width: 100%; height: 50px;"} %>
          </div>
        </td>
        <td>
          <div class="form-actions">
            <%= f.submit "Add", :style => "width: 40px;"  %>
          </div>
        </td>
      </tr>
    </table>
<% end %>