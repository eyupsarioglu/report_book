<%= simple_form_for([@probation, @daily], :validate => true, :html => {:class => 'form-vertical validate' }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :subject %>
      <%= f.input :content, :as => :text, :input_html => { :style => "width: 500px;"} %>
      <%= f.collection_radio_buttons :status, [[true, 'Prublic'] ,[false, 'Private']], :first, :last, :checked => true %>
      <%= f.input :probation_id do %>
        <%= f.select :probation_id, @probation_all.collect { |r| [r.probation_name, r.id] }  %>
      <% end %>
    </div>
    <div class="form-actions">
      <%= f.submit :submit %>
    </div>
<% end %>
